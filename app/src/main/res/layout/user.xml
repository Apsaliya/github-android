<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plank"
    style="@style/PlankStyleDesignV4"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/avtar_shimmer_view"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/avtar_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true" />
        </com.facebook.shimmer.ShimmerFrameLayout>


        <LinearLayout
            android:id="@+id/info_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/avtar_image"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_text"
                style="@style/HeaderTextViewV4"
                android:background="@color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:textSize="14sp"
                android:visibility="visible"
                tools:text="Register should always test with le. "
                tools:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/bottom_below"
        style="@style/HorizontalDividerV4"
        android:layout_alignParentBottom="true" />

</RelativeLayout>